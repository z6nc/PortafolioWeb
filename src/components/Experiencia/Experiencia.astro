---
import {Experienca} from "../Experiencia/ExperienciaAll"
import {IconJob} from "../icon/IconJob"
---

<section class="font-Montserrat flex flex-col gap-y-9 items-center justify-center">
  <div class="text-white inline-flex gap-2 items-center text-center ">
    <IconJob estilo={"size-7 hidden lg:block"} />
    <h2 class="text-2xl font-bold ">EXPERIENCIA LABORAL</h2>
  </div>


  <!-- Inforamcion Trabajo -->
  <article class="flex flex-col justify-between gap-y-7 relative lg:max-w-[50%] lg:border-l-1 border-gray-500 lg:pl-16">
    {
      Experienca.slice(0,1).reverse().map((exp) => (
        <section class="flex flex-wrap    mx-auto ">
            <span class="text-yellow-400  -left-4 absolute rounded-full text-8xl lg:block hidden">
              â€¢
            </span>
            
          <div class=" space-y-2 shadow-lg p-6 rounded-2xl bg-transparent/20 border-1 border-gray-500">
            <h3 class="text-xl font-bold  text-yellow-400 ">{exp.title}</h3>
            <h4 class=" font-semibold text-white">{exp.company}</h4>
            <p class="text-secundario ">{exp.description}</p>
            <p class="text-yellow-400 inline-block px-4 py-1   text-center rounded-2xl bg-yellow-400/10 text-sm ">{exp.date}</p>
          </div>
        </section>
      ))
    }
  </article>
</section>
