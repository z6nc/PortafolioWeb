---
import {iconos ,IconoRenderizado} from '../iconos'
---
<div class="row-span-3 col-span-2  border-1 border-gray-500 bg-transparent/35 p-5 rounded-lg">
  <h3 class="text-white font-black uppercase   	 ">Tecnologias que manejo</h3>
   <ul class="flex flex-wrap gap-2 pt-3">
    {iconos.map((icono) => (
      <li class="inline-flex  space-x-2 items-center text-[11px]   px-3   py-2 rounded-lg  border-1 border-gray-700 text-gray-300">
        <p>{icono.nombre}</p>
        <IconoRenderizado nombre={icono.nombre}  classe={"size-5"}/>
      </li>
    ))}
   </ul>
</div>